@page "/greeting"
@rendermode InteractiveServer
<h3>Greeting</h3>

<div class="form-group">
    <input type="text" placeholder="type your name" @bind="name"  class="form-control" />
</div>

<div class="form-group">
    <input type="text" placeholder="type your address" @bind="address" class="form-control" />
</div>

<div class="form-group">
    <button @onclick="welcome" class="btn btn-primary">Welcome</button>
</div>
<h3>@greeting</h3>
@code {
    private string tittle = "Phan Thế Kỷ";
    private string name;
    private string address;
    private string greeting;

    private void welcome()
    {
        if (!string.IsNullOrEmpty(name) && !string.IsNullOrEmpty(address))
        {
            Console.WriteLine("Welcome method called!");
            
            greeting = $"wellcome {name} from {address} go to blazor app hehe";
            Console.WriteLine(greeting);
        }
        
    }
}
